meta {
  name: Get Projects By Area Id
  type: http
  seq: 24
}

get {
  url: {{host}}/api/projects?areaId={{areaId}}
}

headers {
  Content-Type: application/json
}

tests {
  test("Status is 200", function() {
    expect(res.getStatus()).to.equal(200);
  });
  test("Response is array", function() {
    const data = res.getBody();
    expect(data).to.be.an('array');
    expect(data.length).to.be.at.least(1);
  });
  test("All projects belong to area", function() {
    const data = res.getBody();
    const areaId = Number(bru.getVar("areaId"));
    data.forEach(project => {
      expect(project.areaId).to.equal(areaId);
    });
  });
}
