meta {
  name: Get Projects By User Id
  type: http
  seq: 23
}

get {
  url: {{host}}/api/projects?userId={{userId}}
}

headers {
  Content-Type: application/json
}

tests {
  test("Status is 200", function() {
    expect(res.getStatus()).to.equal(200);
  });
  test("Response is array", function() {
    const data = res.getBody();
    expect(data).to.be.an('array');
    expect(data.length).to.be.at.least(1);
  });
  test("All projects belong to user", function() {
    const data = res.getBody();
    const userId = Number(bru.getVar("userId"));
    data.forEach(project => {
      expect(project.userId).to.equal(userId);
    });
  });
}
