meta {
  name: Update Project
  type: http
  seq: 26
}

put {
  url: {{host}}/api/projects/{{projectId}}
}

headers {
  Content-Type: application/json
}

body {
  {
    "userId": "{{userId}}",
    "areaId": "{{areaId}}",
    "title": "{{$randomProductName}} Project Updated",
    "outcome": "{{$randomCatchPhrase}}",
    "notes": "Updated notes",
    "status": "on_hold",
    "dueDate": "2026-06-30"
  }
}

tests {
  test("Status is 200", function() {
    expect(res.getStatus()).to.equal(200);
  });
  test("Response has updated fields", function() {
    const data = res.getBody();
    expect(data.title).to.be.a("string");
    expect(data.status).to.equal("on_hold");
    expect(data.notes).to.equal("Updated notes");
  });
}
