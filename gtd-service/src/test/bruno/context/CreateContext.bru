}

post {
  url: {{host}}/api/contexts
}

script:pre-request {
  // Create a user first if userId is not set
  const response = await bru.runRequest("user/CreateUser.bru");
}

headers {
  Content-Type: application/json
}

body {
    {
      "userId": "{{userId}}",
      "name": "{{$randomJobTitle}}",
      "description": "{{$randomJobType}}",
      "isLocation": "{{$randomBoolean}}" 
    }
}

tests {
  test("Status is 201", function() {
    expect(res.getStatus()).to.equal(201);
  });
  test("Response has id", function() {
    const data = res.getBody();
    expect(data.id).to.be.a('number');
    expect(data.name).to.be.a('string');
    expect(data.description).to.be.a('string');
    expect(data.isLocation).to.be.a('boolean');
    bru.setVar("contextId", data.id);
    bru.setVar("contextName", data.name);
    bru.setVar("contextDescription", data.description);
    bru.setVar("contextIsLocation", data.isLocation);
  });
}
