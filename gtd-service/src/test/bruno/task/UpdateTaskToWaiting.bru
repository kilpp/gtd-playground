meta {
  name: Update Task To Waiting
  type: http
  seq: 39
}

put {
  url: {{host}}/api/tasks/{{taskId}}
}

headers {
  Content-Type: application/json
}

body {
  {
    "userId": "{{userId}}",
    "projectId": "{{projectId}}",
    "contextId": "{{contextId}}",
    "title": "{{taskTitle}}",
    "notes": "Waiting for approval",
    "status": "waiting",
    "priority": 1,
    "energy": 2,
    "durationEstMin": 15,
    "dueAt": null,
    "deferUntil": null,
    "waitingOn": "Manager approval",
    "waitingSince": "2025-11-17T10:00:00Z",
    "orderIndex": null
  }
}

tests {
  test("Status is 200", function() {
    expect(res.getStatus()).to.equal(200);
  });
  test("Response has waiting status and waitingOn", function() {
    const data = res.getBody();
    expect(data.status).to.equal("waiting");
    expect(data.waitingOn).to.equal("Manager approval");
    expect(data.waitingSince).to.not.be.null;
  });
}
