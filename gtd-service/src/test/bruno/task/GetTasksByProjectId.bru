meta {
  name: Get Tasks By Project Id
  type: http
  seq: 34
}

get {
  url: {{host}}/api/tasks?projectId={{projectId}}
}

headers {
  Content-Type: application/json
}

tests {
  test("Status is 200", function() {
    expect(res.getStatus()).to.equal(200);
  });
  test("Response is array", function() {
    const data = res.getBody();
    expect(data).to.be.an('array');
    expect(data.length).to.be.at.least(1);
  });
  test("All tasks belong to project", function() {
    const data = res.getBody();
    const projectId = Number(bru.getVar("projectId"));
    data.forEach(task => {
      expect(task.projectId).to.equal(projectId);
    });
  });
}
