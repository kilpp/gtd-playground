meta {
  name: Get Tasks By User Id
  type: http
  seq: 33
}

get {
  url: {{host}}/api/tasks?userId={{userId}}
}

headers {
  Content-Type: application/json
}

tests {
  test("Status is 200", function() {
    expect(res.getStatus()).to.equal(200);
  });
  test("Response is array", function() {
    const data = res.getBody();
    expect(data).to.be.an('array');
    expect(data.length).to.be.at.least(1);
  });
  test("All tasks belong to user", function() {
    const data = res.getBody();
    const userId = Number(bru.getVar("userId"));
    data.forEach(task => {
      expect(task.userId).to.equal(userId);
    });
  });
}
